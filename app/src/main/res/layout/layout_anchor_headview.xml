<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/beiJing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/anchorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_12dp_hf"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/default_245dp_hf"
                        android:paddingBottom="@dimen/default_1dp_hf"
                        android:singleLine="true"
                        android:textColor="@color/white_50T"
                        android:textSize="@dimen/default_20sp_hf"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_personInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        >

                        <TextView
                            android:id="@+id/personInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_10dp_hf"
                            android:layout_marginRight="@dimen/default_10dp_hf"
                            android:duplicateParentState="true"
                            android:textColor="@drawable/common_text_white_selector"
                            android:textSize="@dimen/default_14sp_hf" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_12dp_hf"
                    android:paddingLeft="@dimen/default_12dp_hf"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="@dimen/default_0dp_hf"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_renzheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_6dp_hf"
                            android:background="@drawable/bg_circle_bg"
                            android:gravity="center_vertical"
                            android:maxEms="16"
                            android:paddingLeft="@dimen/default_12dp_hf"
                            android:paddingRight="@dimen/default_8dp_hf"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/default_10sp_hf" />

                        <ImageView
                            android:id="@+id/mingxingrenzheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_sign" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/anchorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/default_12dp_hf"
                    android:layout_marginRight="@dimen/default_15dp_hf"
                    android:layout_marginTop="@dimen/default_13dp_hf"
                    android:textColor="@color/white_50T"
                    android:textSize="@dimen/default_14sp_hf" />


                <TextView
                    android:id="@+id/anchorSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/default_12dp_hf"
                    android:layout_marginTop="@dimen/default_15dp_hf"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/white_50T"
                    android:textSize="@dimen/default_14sp_hf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_56dp_hf"
                    android:layout_marginTop="@dimen/default_12dp_hf"
                    android:background="#33000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/default_0dp_hf"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/guanzhuText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_10dp_hf"
                            android:text="关注"
                            android:textColor="@color/white_80T"
                            android:textSize="@dimen/default_14sp_hf" />

                        <TextView
                            android:id="@+id/guanZhuNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_16sp_hf" />


                    </LinearLayout>

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="@dimen/default_0.5dp_hf"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/default_15dp_hf"
                        android:layout_marginTop="@dimen/default_15dp_hf"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="@dimen/default_0dp_hf"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fensiText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="粉丝"
                            android:textColor="@color/white_80T"
                            android:textSize="@dimen/default_14sp_hf" />

                        <TextView
                            android:id="@+id/fansNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_10dp_hf"
                            android:textColor="@color/white"
                            android:textSize="@dimen/default_16sp_hf" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>