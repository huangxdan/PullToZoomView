<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_48dp_hf"
    android:background="#F2FFFFFF"
    android:id="@+id/ll_bottem_layout"
    android:visibility="gone"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_attent"
        android:layout_width="@dimen/default_0dp_hf"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_attent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_attent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_10dp_hf"
            android:text=""
            android:textColor="@color/recharge_text"
            android:textSize="@dimen/default_14sp_hf" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/default_0.5dp_hf"
        android:layout_height="@dimen/default_30dp_hf"
        android:layout_gravity="center_vertical"
        android:background="@color/view_line" />

    <LinearLayout
        android:id="@+id/ll_personal_letter"
        android:layout_width="@dimen/default_0dp_hf"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_sixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_10dp_hf"
            android:text="私信"
            android:textColor="@color/lightBlack64"
            android:textSize="@dimen/default_14sp_hf" />
    </LinearLayout>

</LinearLayout>
